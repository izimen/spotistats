# ==============================================
# BACKEND ENVIRONMENT CONFIGURATION (EXAMPLE)
# ==============================================
# instructions: Copy this file to .env and fill in values.
# IMPORTANT: Never commit the real .env file!

# --- Database ---
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://johndoe:randompassword@localhost:5432/spotistats"
DIRECT_URL="postgresql://johndoe:randompassword@localhost:5432/spotistats"

# --- Spotify API ---
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID="your_spotify_client_id_here"
SPOTIFY_CLIENT_SECRET="your_spotify_client_secret_here"
# Must match settings in Spotify Dashboard
SPOTIFY_REDIRECT_URI="http://localhost:5000/auth/callback"

# --- Security ---
# Generate a secure key: `openssl rand -hex 32`
JWT_SECRET="long_random_string_for_signing_tokens_min_32_chars"
JWT_EXPIRES_IN="7d"

# --- Application ---
PORT=5000
NODE_ENV="development" # or 'production'
# URL of the frontend application (for CORS)
FRONTEND_URL="http://localhost:5173"

# --- Deployment ---
# Optional: Key for securing cron endpoints
CRON_SECRET_KEY="random_key_for_cloud_scheduler"
